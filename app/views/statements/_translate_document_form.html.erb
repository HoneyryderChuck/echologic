<% statement_node ||= @statement_node %>
<% statement_document ||= @statement_document%>
<% new_statement_document ||= @new_statement_document%>
<% css_rte_class = 'rte_tr_doc' %>

<% form.semantic_fields_for :new_statement_document, new_statement_document do |doc|  %>
  <% doc.inputs :class => 'inputs right_panel' do %>
    <%= doc.input :title %>
    <br/>
    <%= doc.input :text,
                  :input_html => {:class => css_rte_class}%>
  <% end %>
  <%= hidden_field_tag "#{statement_node_class_dom_id(statement_node).downcase}[new_statement_document][old_document_id]", statement_document.id %>
	<%= hidden_field_tag "#{statement_node_class_dom_id(statement_node).downcase}[new_statement_document][action_id]", @action.id if @action %>
<% end -%>

<script>
  loadRTEEditor('.rte_tr_doc', '<%= ECHOLOGIC_HOST %>');
	$('#<%= statement_node_class_dom_id(statement_node).downcase %>_new_statement_document_title').focus();
</script>
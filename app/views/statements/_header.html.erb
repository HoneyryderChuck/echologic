<% statement_node ||= @statement_node %>
<% statement_document ||= @statement_document %>
<% statement_type = statement_node.class.name %>
<% only_header ||= false %>
<% hide_content ||= false %>
<% content_tag :div,
               :class => "header #{only_header ? (hide_content ? 'expandable active' : 'expandable') : 'active'}",
               :'data-href' =>  (statement_node_url(statement_node, :expand => true) if only_header) do %>
  <!-- Alternatives -->
  <%= render :partial => 'statements/alternative_header', :locals => {:statement_node => statement_node} if statement_node.class.has_alternatives? and @node_environment.alternative_mode?(statement_node) %>
	
	<% content_tag :div, :class => "main_header" do %>
		<% content_tag :div, :class => 'header_buttons' do %>
		 <%= render :partial => "statements/navigation_buttons", :locals => {:statement_node => statement_node} %>
	
		 <%= render :partial => "statements/descendants",
	              :locals => {:child_type => node_type(statement_node), :display => true,
	              :children => @children[statement_type.to_sym]} if @children and @children[statement_type.to_sym] %>
		<% end %>
		<% content_tag :div, :class => 'header_link'  do %>
			<% statement_node_context_link(statement_node,
	                                   statement_document.title,
	                                  (!only_header ? 'current' : 'back_to'),
	                                  :hub => (@node_environment.alternative_modes.to_s if @node_environment.alternative_mode?(statement_node)),
	                                  :css => 'ajax') %>
																		
			<%= render :partial => "statements/supporters", :locals => {:statement_node => statement_node, :show_label => !only_header} if statement_node.echoable? %>

		<% end %>
	  <%= content_tag :div, '', :class => 'expand_icon' %>
	<% end %>
<% end %>

<% if defined? @info %>
  info('<%=@info%>');
<% end %>
<% if defined? @error %>
  info('<%=@error%>');
<% end %>


/* history handling */
<% if !params[:sids].blank? and @ancestors %>
  var stack = "<%= params[:sids] %>".split(",");
	<% @ancestors.each_with_index do |ancestor, index| %>
   <% type = ancestor.class.name.underscore %>
    var ancestor = stack[<%= index %>];
		var ancestor_element = $('#statements .statement').eq(<%= index %>);
		/* if not rendered, than render */
    if(ancestor_element.length == 0 || !ancestor_element.attr('id').match(ancestor)) {
		  var ancestor = $("<%= escape_javascript(render_ancestor(ancestor)) %>").statement();
			ancestor.data('api').insert(<%= index%>);
    } else {
      ancestor_element.data('api').hide();
    }
  <% end %>
<% end %>


/* breadcrumb */
<% if !@breadcrumbs.blank? %>
  <% @breadcrumbs.each do |b| %>
	 $('#breadcrumbs').breadcrumb("add",eval(<%= b.to_json %>));
  <% end %>
<% end %>
$('#breadcrumbs').breadcrumb('update').breadcrumb('resize');

<% if !params[:expand].blank? %>
  var content = "<%= escape_javascript(render :partial => 'statements/content', :locals => {:hide_content => true}) %>";
  var statement = $('#statements .statement').eq(<%= @statement_node.level %>).statement();
	var api = statement.data('api');
	api.insertContent(content).show();
<% elsif !params[:new_level].blank? %>
  var element = $("<%= escape_javascript(render :partial => 'statements/show', :locals => {:hide_content => true}) %>").statement();
	var api = element.data('api');
	api.insert(<%= @statement_node.level %>).show().removeBelow();
<% else %>
  var element = $("<%= escape_javascript(render :partial => 'statements/show') %>").statement();
	var api = element.data('api').insert(<%= @statement_node.level %>).removeBelow();
<% end %>


<% statement_node ||= @statement_node %>
<% statement_document ||= @statement_document %>

<% semantic_form_for statement_node, 
          :html => {:class => "new wide_form statement #{dom_class(statement_node)} 
                    #{statement_node.taggable? ? 'taggable' : ''} 
                    #{statement_node.echoable? ? 'echoable' : ''}" } do |form| -%>
  <%= hidden_field_tag :type, @statement_node_type.name %>
	<%= hidden_field_tag :path, params[:origin] if params[:origin] %>
	<%= hidden_field_tag :search_terms, params[:search_terms] if params[:search_terms] %>
	<%= render :partial => 'statements/form/form_header', :locals => {:form => form, :statement_node => statement_node} %>
  <%= render :partial => 'statements/form/form_content', 
                         :locals => {:form => form, :statement_node => statement_node,
                                     :headline => I18n.t("discuss.statements.new.#{dom_class(statement_node)}") }%>
<% end -%>


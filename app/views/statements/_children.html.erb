<% statements ||= @statements || [] %>
<%  statement ||= @statement %>

<div id="children">
  <% unless statements.empty? && statement.class.expected_children.empty? %>
    <h2><%= children_box_title(statement.class.name) if statements.any? %></h2>
    <%= render :partial => 'statements/children_list', :locals => {:statements => statements, :statement => statement}%>

    <% if false%>
      <div id="new_statement2">
        <%= create_statement_link(statement) if statement.class.expected_children.any? %>
      </div>
    <% end %>

  <% end %>
</div>

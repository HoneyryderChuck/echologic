/* Close the content of the remaining ones */
$('#statements .statement .header').removeClass('active');
$('#statements .statement .content').hide();
$('#statements .statement .supporters_label').hide();

var new_form = "<%= escape_javascript(render :partial => 'statements/proposals/edit_draft') %>";

var class_element = $('#statements div.<%= dom_class(@statement_node) %>');

if(class_element.length > 0) {class_element.replaceWith(new_form);}
else {$('#statements').append(new_form);};

$('#edit_<%= dom_id(@statement_node)%>').ajaxForm({ dataType : 'script' });
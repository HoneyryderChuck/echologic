<% statement_node ||= @statement_node %>
<% statement_document ||= @statement_document %>
<div id="summary" class="summary simple_header_block discuss_right_block">
  <h2><%= I18n.t('discuss.summary.title') %></h2>
  <%= edit_statement_node_link(statement_node, statement_document) %>
	<%= render :partial => '/statements/translation_link', :locals => {:statement_node => statement_node, :statement_document => statement_document} if @translation_permission %>
	<%= render :partial => '/statements/original_language_warning', :locals => {:statement_node => statement_node, :statement_document => statement_document} if @original_language_warning %>
  <p><%= statement_document.text %></p>
</div>

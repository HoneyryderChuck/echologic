<% statement_node ||= @statement_node %>
<% only_echo_button ||= false %>

<div class="action_bar">

	<% if statement_node.new_record? %>
	  <%= new_form_echo_button(statement_node) %>
	<% else %>
	  <%= show_echo_button(statement_node) %>
	<% end %>

  <% if !only_echo_button %>
    <%= render_add_new_button(statement_node, params[:origin], params[:bids]) %>

    <% if current_user and current_user.may_delete?(statement_node) -%>
      <br/><br/>
      <%= delete_statement_node_link(statement_node) %>
    <% end -%>
  <% end %>
</div>

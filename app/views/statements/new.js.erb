var element = $("<%= escape_javascript(render :partial => 'statements/new') %>");
element.statement('insert', <%= (@statement_node.parent.nil? or @statement_node.class.is_top_statement?) ? 0 : @statement_node.parent.level + 1 %>).statement('removeBelow');

<% if @statement_node.echoable? %>
  element.statement('loadEchoMessages', <%= @messages %>);
<% end %>

/* Breadcrumb's stack (if follow-up question */
<% if !params[:new_level].blank? and @statement_node.class.is_top_statement? and @breadcrumb %>
   $('#breadcrumbs').breadcrumb("add",eval(<%= @breadcrumb.to_json %>));
  $('#breadcrumbs').breadcrumb('resize');
<% end %>
<% statement_node ||= @statement_node %>

<% form.semantic_fields_for :statement_data, statement_node.statement_data do |statement_data|  %>

  <% statement_data.inputs :class => 'info_types_container' do %>
    <%= statement_data.input :info_type, 
                        :as => :radio,
                        :collection => InfoType.all.collect{|i|[i.value,i.code]},
                        :class => "info_type" %>
  <% end %>
	
	<% statement_data.inputs :class => 'embed_url' do %>
    <%= statement_data.input :info_url %>
  <% end %>
	
	<%= content_tag :iframe, '', :class => 'embedded_content', :frameborder => 0, :style => 'display:none' %>
  

<% end %>
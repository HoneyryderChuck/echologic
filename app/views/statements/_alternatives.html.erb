<% statement_node ||= @statement_node %>
<% alternatives ||= @alternatives %>
<% content_tag :div, :class => 'alternatives alternative_panel header_block' do %>
  <%= alternatives_box_title %>
  
	<%= render :partial => 'statements/children_list',
             :locals => {:label_type => "alternative",
                         :child_type => @statement_node.class.alternative.to_s.underscore,
                         :children => alternatives.flatten,
                         :display => true}%>
	<%= render_arrow %>
<% end %>
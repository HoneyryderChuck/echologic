<% statement_node ||= @statement_node %>

<% content_tag :div, :class => "alternative_header" do %>
  <% content_tag :div, :class => 'header_buttons' do %>
	 
   <%= alternative_header_box_title(dom_class(statement_node)) %>
   <%= close_alternative_mode_button(statement_node) %>
   
  <% end %>
	<% content_tag :div, :class => 'header_link' do %>
	  <% if @discuss_alternatives_question.nil? %>
      <%= create_discuss_alternatives_question_link(statement_node) %>
		<% else %>
		  <% content_tag :div, :class => dom_class(@discuss_alternatives_question), 'statement-id' => @discuss_alternatives_question.target_id do %>
			  <%= link_to_child(@discuss_alternatives_document.title,
	                        @discuss_alternatives_question,
	                        :new_level => true) %>
		  <% end %>
		<% end %>	
	<% end %>
<% end %>

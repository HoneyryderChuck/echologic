<% question_document ||= @statement_documents[question.statement_id] %>

<li id="<%= dom_id(question) %>" class="question">
	  <% link_to_question(question_document.title, question) %>
    <% content_tag :div, :class => 'top_area' do %>
		  <%= statement_node_context_link(question, "#{question_document.title}", 'current', 
          :bids => @origin, :origin => @origin) %>
			<%= supporter_ratio_bar(question) %>
      <%= supporters_label(question, true) %>
    <% end %>
		<% content_tag :div, :class => 'bottom' do %>
		  <% content_tag :div, :class => 'description' do %>
			 <%= format_description(question_document.text) %>
			<% end %>
		<% end %>
		<% content_tag :div, :class => 'buttons', :id => "#{dom_id(question)}_buttons" do %>
		 <%= publish_button_or_state(question, true) %>
		<% end %>
</li>

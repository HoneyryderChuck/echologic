<% statement ||= @statement %>
<% statement_document ||= @statement_document %>

<div id="original_language_box" class="translation_box_class rounded-box rounded-box-gray-itow with_bg_bw_grad_small" style="display: none">
  <%= image_tag('page/translation/babelfish_left.png', :class => 'fish_left') %>
  <span class="language_label from_language"><%= statement_document.language.get_current_enum_value.value.upcase %></span>
  <%= link_to I18n.t('discuss.original_language_warning',
                     :language => statement.statement.original_language.get_current_enum_value.value.upcase),
              my_profile_path,
              :class => "translation_link profile_link" %>
</div>

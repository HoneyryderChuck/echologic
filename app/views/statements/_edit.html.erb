<% statement ||= @statement -%>
<% form_for statement.self_with_parents do |f| -%>
  <%= f.error_messages %>
  <%= render :partial => "statements/form", :locals => { :form => f } %>
<% end -%>
<script type="text/javascript">
  $('#edit_<%=statement.class.name.underscore%>_<%=statement.id%>').ajaxForm({ dataType : 'script' });
</script>

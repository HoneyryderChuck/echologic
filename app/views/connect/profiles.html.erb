<h1>Connect 2nd</h1>

<div id="connect_container">
  <% form_tag '/connect/search', :method => 'GET', :id => 'search_form' do %>
    <%= text_field_tag :value %>
    <%= submit_tag :send, :alt => 'search_button' %>
  <% end %>

  <%= render :partial => 'users/profile/list' %>
  
  <div id="profile_details_container" style="padding:5px;background:#ddd;-moz-border-radius:8px;display:none;">
  
  </div>

</div>

<script type="text/javascript">
  $('#search_form').ajaxForm({ dataType : 'script' });
</script>

<ul>

  <li id="memberships">
    <span class="label"><%= Profile.human_attribute_name(:memberships) %></span>
    <% unless @profile.memberships.blank? %>
      <% memberships = "" %>
      <% for membership in @profile.memberships do %>
        <% memberships.concat h(membership.organisation) %>
        <% memberships.concat ' - ' + h(membership.position) + '<br/>' %>
      <% end %>
      <span class="value"><%= memberships %></span>
    <% else %>
      <span class="value"><%= I18n.t('application.general.undefined') %></span>
    <% end %>

  </li>
  <br/>

  <li>
    <span class="label"><%= Profile.human_attribute_name(:about_me) %></span>
    <% unless @profile.about_me.blank? %>
      <span class="value"><%=h @profile.about_me %></span>
    <% else %>
      <span class="value"><%= I18n.t('application.general.undefined') %></span>
    <% end %>
  </li>

  <li>
    <span class="label"><%= Profile.human_attribute_name(:motivation) %></span>
    <% unless @profile.motivation.blank? %>
      <span class="value"><%=h @profile.motivation %></span>
    <% else %>
      <span class="value"><%= I18n.t('application.general.undefined') %></span>
    <% end %>
  </li>

</ul>


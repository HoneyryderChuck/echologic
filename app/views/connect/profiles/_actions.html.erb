
<% if @profile and !@profile.new_record? %>
	<%= link_to I18n.t('connect.details.actions.report'),
	    url_for(:controller => 'users/reports', :action => 'new', :id => @profile.user), :class => 'ajax action_button report_action' %>
	<%= link_to I18n.t('connect.details.actions.send_mail'),
	    new_user_mail_path(:id => @profile.user), :class => 'ajax action_button send_mail_action' %>
	
	<% if show_admin_options? %>
	  <br/><br/><br/>
	  <%= link_to 'Delete User', @profile.user, :method => :delete, :confirm => 'Sure?', :class => 'admin_action',
	              :title  => "User Id: #{@profile.user_id}, Profile Id: #{@profile.id}" %>
  <% end %>
<% end %>
/* Render details into the corresponding container. */

var overview     = "<%= escape_javascript(render(:partial => 'connect/profiles/overview')) %>";
var concernments = "<%= escape_javascript(render(:partial => 'connect/profiles/concernments')) %>";
var web_addresses = "<%= escape_javascript(render(:partial => 'connect/profiles/web_addresses')) %>";
var avatar       = "<%= escape_javascript(render(:partial => 'connect/profiles/avatar')) %>";
var actions      = "<%= escape_javascript(render(:partial => 'connect/profiles/actions')) %>";

$j('#avatar').html(avatar);
$j('#overview').html(overview);
$j('#concernments').html(concernments);
$j('#web_addresses').html(web_addresses);
$j('#full_name').html("<%=h @profile.full_name %>");
$j('#actions').html(actions);

$j(".profile").removeClass('active');
$j("#<%= dom_id @profile %>").addClass('active');

/* Show the profile details and afterwards scroll to the results container. */
$j('#profile_details_container:hidden').animate(toggleParams, 500, function() {$j.scrollTo('#results_anchor', 400);});

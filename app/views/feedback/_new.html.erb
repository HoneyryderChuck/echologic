<%= link_to_remote("<h1 class='link'>#{I18n.t('static.echologic.title')}</h1>", {:url => echologic_path}, :href => echologic_path) %>
<h2><%= I18n.t('feedback.new.title') %></h2>

<%= t('feedback.new.welcome') %>

<%= image_tag('page/illustrations/feedback.png', :id => 'feedbackIllustration') %>

<% if not flash[:error].empty? %>
  <div id="errorExplanation" class="errorExplanation">
    <h2><%= t('activerecord.errors.template.header.one') %></h2>
    <p><%= t('activerecord.errors.template.body') %></p>
    <ul>
      <li>
        <%= flash[:error] %>
        <% # TODO niling the error doesn't work properly on site reload %>
        <% flash[:error] = nil %>
      </li>
    </ul>
  </div>
<% end %>

<% form_tag({:controller => 'feedback', :action => 'create'}) do %>

  <div class="formBlock">
    <%= label_tag I18n.t('application.general.name'), nil, :class => 'formLabel' %><br />
    <%= text_field_tag :name, request.params[:name] %>
  </div>
  
  <div class="formBlock">
    <%= label_tag I18n.t('application.general.email'), nil, :class => 'formLabel' %><br />
    <%= text_field_tag :sender, request.params[:sender] %>
  </div>

  <div class="formBlock">
    <%= label_tag I18n.t('feedback.new.message'), nil, :class => 'formLabel' %><br/>
    <%= text_area_tag :text, request.params[:text] %>
  </div>

  <%= submit_tag I18n.t('application.general.send'), :class => 'formButton200' %>
  
<% end -%>


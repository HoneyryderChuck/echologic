<% content_for :tabContainer do %>
  <%= render :partial => 'tabs_echo' %>
<% end %>

<h1><%= t('static_content.echo.title') %></h1>
<h4><%= t('.title') %></h4>

<p><%= t('.text') %></p>

<ul class="spreadedList">
  <li>
    <strong><%= t('.clarity') %></strong>
    <% insert_toggle_more(t('.clarity_more')) %>
  </li>
  
  <li>
    <strong><%= t('.transparency') %></strong>
    <% insert_toggle_more(t('.transparency_more')) %>
  </li>
  
  <li>
    <strong><%= t('.detailed') %></strong>
    <% insert_toggle_more(t('.detailed_more')) %>
  </li>
  
  <li>
    <strong><%= t('.democratic') %></strong>
    <% insert_toggle_more(t('.democratic_more', :tooltip => t('.democratic_tooltip'))) %>
  </li>
  
  <li>
    <strong><%= t('.glocal') %></strong>
    <% insert_toggle_more(t('.glocal_more')) %>
  </li>  
</ul>

<script type="text/javascript" charset="utf-8">
  $$(".ttLink").each( function(text) {
    new Tooltip(text);
  });
</script>




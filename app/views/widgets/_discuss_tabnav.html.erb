<%
# Render submenu tabs for act section.

render_tabnav :discuss,
              :generate_css => false, :html => {:class => 'submenu'} do

  add_tab do |t|
    t.named I18n.t('discuss.topics_overview.title')
    t.links_to hash_for_discuss_path
  end

  add_tab :html => {:id => 'echonomyjam_tab'} do |t|
    t.named 'echonomy JAM'
    t.links_to hash_for_question_tags_path.merge({:id => 'echonomyJAM'})
    t.highlight! if @category && @category.value == 'echonomyJAM'
  end

  add_tab :html => {:id => 'echocracy_tab'} do |t|
    t.named 'echocracy'
    t.links_to hash_for_question_tags_path.merge({:id => 'echocracy'})
    t.highlight! if @category && @category.value == 'echocracy'
  end

  add_tab :html => {:id => 'echo_tab'} do |t|
    t.named 'echo'
    t.links_to hash_for_question_tags_path.merge({:id => 'echo'})
    t.highlight! if @category && @category.value == 'echo'
  end

  add_tab :html => {:id => 'roadmap_tab'} do |t|
    value = '<span id="roadmap_tab_title">' + I18n.t('application.roadmap.title') + '</span>'
    value += insert_progressbar(Development::DISCUSS_PROGRESS)
    t.named value
    t.links_to hash_for_discuss_roadmap_path
  end

end
%>

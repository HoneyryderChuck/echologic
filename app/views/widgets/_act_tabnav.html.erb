<%
# Render submenu tabs for act section.

render_tabnav :act,
              :generate_css => false, :html => {:class => 'submenu'} do

  add_tab do |t|
    t.named I18n.t('application.general.welcome')
    t.links_to hash_for_act_path
  end

  add_tab :html => {:id => 'roadmap_tab'} do |t|
    value = '<span id="roadmap_tab_title">' + I18n.t('application.roadmap.title') + '</span>'
    value += insert_progressbar(10)
    t.named value
    t.links_to hash_for_my_profile_path
  end

end
%>

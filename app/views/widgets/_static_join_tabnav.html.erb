<%
# This partial renders the static echo tabnav.
   
render_tabnav :main, 
              :generate_css => false,
              :html => { :class => 'applicationTabs' } do

  add_tab :html => { :class => 'ajaxLink' } do |t|
    t.named I18n.t('static.join.tabs.join')
    t.links_to hash_for_join_path
  end

  add_tab :html => { :class => 'ajaxLink' } do |t|
    t.named I18n.t('static.join.tabs.forgot')
    t.links_to hash_for_new_password_reset_path
  end

end

%>

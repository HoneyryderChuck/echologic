<h1>New interested_person</h1>

<% form_for(@interested_person) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, :class => 'mceEditor' %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
  
  <%= f.text_area :name, :class => 'mceEditor' %>
  
<% end %>

<%= link_to 'Back', interested_people_path %>
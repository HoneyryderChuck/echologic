<h1>New translation</h1>

<% form_for(@translation) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :key %><br />
    <%= f.text_field :key %>
  </p>
  <p>
    <%= f.label :raw_key %><br />
    <%= f.text_field :raw_key %>
  </p>
  <p>
    <%= f.label :value %><br />
    <%= f.text_field :value %>
  </p>
  <p>
    <%= f.label :pluralization_index %><br />
    <%= f.text_field :pluralization_index %>
  </p>
  <p>
    <%= f.label :locale_id %><br />
    <%= f.text_field :locale_id %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', translations_path %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="<%= request[:locale] %>" lang="<%= request[:locale] %>">
  <head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <title><%= I18n.t('application.page_title') %></title>
    <meta name="description" content="<%= I18n.t('application.meta.description') %>"/>
    <meta name="keywords" content="<%= I18n.t('application.meta.keywords') %>"/>
    <link rel="shortcut icon" href="/images/favicon.gif" type="image/gif" />
    <%= stylesheet_link_tag 'echologic' %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'jquery.qtip-1.0.0-min' %>
    <%# javascript_include_tag 'IE8' %>
    <%= javascript_include_tag 'jquery.ba-url.min' %>

    <%= stylesheet_link_tag 'connect' %>
    <%= stylesheet_link_tag 'profile' %>
    <%= stylesheet_link_tag 'application' %>

  </head>
  <body>

    <div id="header">
      <div id="echologicLogo">
        <%= link_to(image_tag('page/echologic_logo.png'), users_path) %>
      </div>
      <%= render :partial => "layouts/top_menu" %>
      <%= render :partial => "users/user_sessions/login" %>
    </div>
    
    <div id="echologicContainer" <%= display_echologic_container %>>
      <%= render :partial => "layouts/statement" %>
      <%= render :partial => "layouts/news" %>
    </div>

    <div class="tabContainer" id="tabContainer" <%= display_tab_container %>>
      <%= render :partial => 'layouts/application_tabs' %>
    </div>
  
    <div id="applicationContainer">

      <div id="contentContainer">
        <% # TODO error and notive handling and styling %>

        <% if flash[:error] %>
          <div id="messageDialog" class="ui-state-error">
            <%= flash[:error] %>
          </div>
        <% end %>

        <% if flash[:notice] %>
          <div id="messageDialog" class="ui-state-highlight">
            <%= flash[:notice] %>
          </div>
        <% end %>
        
        <% # Content %>
        <%= yield %>
      </div>

      <span class="border"></span>

    </div>

    <%= render :partial => "layouts/bottom_menu" %>

    <!-- Dialog container for outer menu. -->
    <div id="dialogContent" style="display:none;"></div>

  </body>
</html>

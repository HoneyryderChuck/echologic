<% @user = user if defined?(user) %>
<% @profile = @user.profile %>

<li id="<%= dom_id(@user) %>">
  <% link_to @profile, :class => 'ajax show_link' do %>
    <%= image_tag @profile.picture.url(:header) %>
  <% end %>
  <div>
    <%=h @profile.full_name %> <br/>
    <%=h @user.email %>     <br/>
    <%= link_to 'Show', @user, :class => 'ajax show_link' %> 
    <% if show_admin_options? %>
      <%= link_to 'Edit', edit_user_path(@user) %>
      <%= link_to 'Destroy', @user, :confirm => 'Are you sure?', :method => :delete %>
    <% end %>
  </div>
  
</li>

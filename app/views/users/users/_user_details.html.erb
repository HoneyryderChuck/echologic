<% @user = user if defined?(user) %>

<li id="<%= dom_id(@user) %>">
  <%= image_tag @user.picture.url(:small) %>
  <div>
    <%=h @user.full_name %>  <br/>
    <%=h @user.email %>      <br/>
    <%=h @user.city %>       <br/>
    <%=h @user.country %>    <br/>
    <%=h @user.about_me %>   <br/>
    <%=h @user.motivation %> <br/>
    <%= link_to 'Close', '#', :onclick => "$j('#user_details_container').hide(); return false;", :class => 'close_link' %>
    <% if show_admin_options? %>
      <%= link_to 'Edit', edit_user_path(@user) %>
      <%= link_to 'Destroy', @user, :confirm => 'Are you sure?', :method => :delete %>
    <% end %>
  </div>
  
</li>

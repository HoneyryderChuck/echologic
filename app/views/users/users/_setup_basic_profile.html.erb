<div class='registry'>
	<div id="setup_basic_profile" class='modal_form_container'>
	   <%= content_tag :span, content_tag(:h1, I18n.t('users.setup_basic_profile.title')),
                     :class => 'sign_in logo'%>
		 <p>
      <%= I18n.t('users.setup_basic_profile.guide') %>
    </p>
		 <% form_for @user, :url => activate_path(@user.perishable_token),
                 :html => {:method => :post,
                           :class => "echoForm ajax_form",
                           :id => 'new_user_form'} do |f| %>
		 <div class='setup_basic_profile_container'>
		 	  <p>
          <%= f.label I18n.t('application.general.email') %><br />
          <%= f.text_field :email %><br />
        </p>
		 	  <p>
          <%= f.label I18n.t('application.general.name') %><br />
          <%= f.text_field :full_name %><br />
        </p>
        <%= tag('br');tag('br') %>
				<p>
					<%= check_box_tag 'user[agreement]', 1, false %>
          <%= link_to(I18n.t('users.setup_basic_profile.agreement'),
                      '/resources/Datenschutz_echologic.pdf', {:target => 'blank'}) %>
       </p>
        <%= f.submit I18n.t('application.general.save'), :class => 'signinButton formButton200' %><br/>
		 </div>
		 <div class='setup_basic_profile_container'>
		 	  <% if !@profile_info['photo'].blank? %>
			 	  <%= image_tag @profile_info['photo'], :class => 'photo' %>
					<%= check_box_tag "user[avatar_url]", @profile_info['photo'], nil,
                            :class => "avatar" %>
					<%= f.label I18n.t("users.setup_basic_profile.use_photo") %><br/>
				<% end %>
     </div>
		 <% end %>
	</div>
</div>
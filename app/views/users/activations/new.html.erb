<% content_for :tabContainer do %>
  <%= tabnav :static_join %>
<% end %>

<h1><%= I18n.t('users.users.new.title') %></h1>
<h2><%= I18n.t('users.activations.heading') %></h2>

<% form_for @user, :url => activate_path(@user.id), :html => { :method => :post } do |form| %>
  <p>
    <%= form.label :password, I18n.t('users.activations.set') %>
    <%= form.password_field :password %>
  </p><p>
    <%= form.label I18n.t('users.activations.confirm') %>
    <%= form.password_field :password_confirmation %>
  </p><p>
    <%= form.submit I18n.t('users.activations.activate') %>
  </p>
<% end %>


<li id="<%= notification_type %>_notifications" class="switch_block">
  <span class="switch">
    <%= check_box_tag("#{notification_type}_notification","notify",
                      @user.send("#{notification_type}_notification?"),
                      {:id => "#{notification_type}_notification_switch".to_sym})%>
  </span>
  <span class="switch_title">
    <%=I18n.t("users.notifications.#{notification_type}.title")%>
  </span>
  <span class="switch_guide">
    <%=I18n.t("users.notifications.#{notification_type}.guide")%>
  </span>
</li>
<%= observe_field "#{notification_type}_notification_switch".to_sym,
                  :url => {:controller => :my_echo,
                           :action => "set_#{notification_type}_notification".to_sym,
                           :id => @user.id} %>

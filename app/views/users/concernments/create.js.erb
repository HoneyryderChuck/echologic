/**
 * @author Joe
 *
 * Template for inserting a recently created concernment tag and reset
 * the form.
 */

/* Render partial for the tag. */
var tag = "<%= escape_javascript(render @concernment) %>";

/* Append the tag to the right list of tags (by sort) */
$('#concernments_<%= params[:sort] %>').append(tag).fadeIn();

/* Reset the form. */
$('#new_concernment_<%= params[:sort] %>').reset();

<% new ||= false %>

<span id="<%= dom_id concernment %>" class="tag">
  <%= concernment.tag.value %> <%= link_to 'x', url_for(:controller => 'users/concernments', :action => 'destroy', :id => concernment.id), :class => 'ajax' if concernment.user == current_user %>
</span>

<% if new %>
	<script>
	  $('#new_concernment_<%= @sort %>').reset();
	  $('#tag_<%= @sort %>_id').focus();
	</script>
<% end %>
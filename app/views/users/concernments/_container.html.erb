<div id="concernment_container" class="header_block two_columns_block">
  <h2><%= I18n.t('users.concernments.title') %></h2>

  <div class="guide">
    <%= I18n.t('users.concernments.guide') %>
  </div>
  <% concernments = @user.concernments %>

  <% Concernment.sorts.each do |sort, name| %>
    <%= render :partial => 'users/concernments/list', :locals => { :concernments => concernments.find_all_by_sort(sort), :sort => sort , :name => name} %><br/>
  <% end %>

</div>

<script type="text/javascript">
  $(".tag_value_autocomplete").autocomplete("users/concernments/auto_complete_for_tag_value", {minChars: 3, selectFirst: false});
</script>

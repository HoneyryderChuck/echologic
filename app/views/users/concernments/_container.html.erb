<div id="concernment_container" class="header_block two_columns_block">
  <h2><%= I18n.t('users.concernments.title') %></h2>

  <div class="guide">
    <%= I18n.t('users.concernments.guide') %>
  </div>
	<% #concernments = @user.concernments %>

  <% ValidContext.valid_contexts(@user.class.name).each do |tag_context| %>
    <%= render :partial => 'users/concernments/list', :locals => { :concernments => @user.get_tags(tag_context), :context => tag_context} %><br/>
  <% end %>

</div>

<script type="text/javascript">
  $(".tag_value_autocomplete").autocomplete("users/users/auto_complete_for_tag_value", {minChars: 3, selectFirst: false});
</script>

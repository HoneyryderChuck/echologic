<div id="concernments_<%= sort %>" style="clear: both;">
  <%= render :partial => 'users/concernments/concernment', :collection => concernments %>
</div>

<% form_tag url_for(:controller => "users/concernments", :action => "create"), :id => "new_concernment_#{sort}" do -%>
  <%= text_field :tag, :value, :class => 'tag_value_autocomplete' %>
  <%= hidden_field_tag :user_id, @user.id %>
  <%= hidden_field_tag :sort, sort %>
  <%= submit_tag I18n.t('application.general.create'), :class => 'text_button add_button' %>
<% end %>

<script type="text/javascript">
  $("#new_concernment_<%= sort %>").ajaxForm({ dataType: 'script' }); 
</script>

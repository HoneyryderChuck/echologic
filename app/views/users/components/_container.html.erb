<div id="<%= type %>_container" class="header_block">
  <h2><%= I18n.t("users.#{type.pluralize}.title") %></h2>
  
  <div class="guide">
    <%= I18n.t("users.#{type.pluralize}.guide") %>
  </div>

  <ul id="<%=type%>_list">
    <li>
      <span class="column_200 label"><%= I18n.t("users.#{type.pluralize}.#{label}") %></span>
      <span class="column_200 label"><%= I18n.t("users.#{type.pluralize}.#{value}") %></span>
    </li>
    <%= render :partial => "users/#{type.pluralize}/#{type}", :collection => @user.send(type.pluralize) %>
  </ul>
  <ul>
    <%= render :partial => "users/#{type.pluralize}/new" %>
  </ul>

</div>

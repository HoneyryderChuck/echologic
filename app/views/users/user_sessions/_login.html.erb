<div id="loginContainer">

  <% if current_user_session %>
    <%= link_to(image_tag(current_user.picture.url(:small)), profile_path) if current_user.picture? %>
    <span>
      <%= I18n.t('users.user_sessions.login.hello', :name => current_user.prename) %><br/>
    </span>

  <% else %>
    <% form_for UserSession.new, :url => user_session_path do |f| %>
      <span class="label"><%= I18n.t('users.user_sessions.login.email') %></span>
      <span class="label"><%= I18n.t('users.user_sessions.login.password') %></span><br/>
      <%= f.text_field :email, :class => 'NEWloginField' %>
      <%= f.password_field :password, :class => 'NEWloginField' %>
      <%= f.submit 'Login', :class => 'ui-button ui-state-default ui-corner-all' %><br/>
      <%= link_to I18n.t('users.user_sessions.login.signup'), join_path, :class => 'ajaxLink' %><br/>
      <%= link_to I18n.t('users.user_sessions.login.forgot'), new_password_reset_path, :class => 'ajaxLink' %><br/>
    <% end %>
  <% end %>
</div>

<% form_remote_tag :url => user_web_profile_path(@user, @web_profile), :method => :put do -%>

    <%= select :web_profile, :sort, WebProfile.sorts, { :selected => @web_profile.sort } %>    
    <%= text_field :web_profile, :location %>
    <%= hidden_field :user_id, :value => @user.id %>
    <%= submit_tag 'Update', :class => 'submitButton' %>
    <%= link_to 'Back', user_web_profile_path(@user, @web_profile), :class => 'optionsButton' %>

<%- end %>

  <script type="text/javascript">
    $('.optionsButton').live("click", function() {
      $.getScript(this.href);
      return false;
    });
    
    
  </script>
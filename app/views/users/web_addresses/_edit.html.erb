<% web_address ||= @web_address %>
<% user ||= @user %>

<% form_tag user_web_address_path(user, web_address),
            :method => :put,
            :id => dom_id(web_address, :edit) do -%>

  <%= select :web_address,
             :type_id,
             WebAddress.web_address_types.collect { |wa| [wa.get_current_enum_value.value,wa.id] },
             { :selected => web_address.type_id } %>
  <%= text_field :web_address, :address %>
  <%= hidden_field :user_id, :value => user.id %>

  <!-- Save and cancel buttons -->
  <%= save_or_cancel user_web_address_path(user, web_address) %>

<% end -%>

<script type="text/javascript">
  $("#<%= dom_id(web_address, :edit) %>").ajaxForm({ dataType: 'script' });
</script>

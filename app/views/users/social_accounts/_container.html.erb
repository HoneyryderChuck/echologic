<div id="social_accounts_settings" class="header_block">
  <h2><%= I18n.t("users.social_accounts.title") %></h2>
  <div class="guide">
    <%= I18n.t("users.social_accounts.guide") %>
  </div>
	<ul id="social_account_list">
			<% token_url = redirect_token_url %>
      <% SocialService.instance.social_providers.each do |provider| %>
			  <%= content_tag :li, social_account_button(provider, token_url) %>
      <% end %>
  </ul>
</div>
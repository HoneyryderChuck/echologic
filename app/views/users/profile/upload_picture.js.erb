/**
 * Template to view the upload picture modal dialog.
 */

/* Write render output into JS variables for later use. */
var content = "<%= escape_javascript(render(:partial => 'users/profile/upload_picture')) %>";

$('#dialogContent').html(content);

$('#dialogContent').dialog({
  bgiframe: true,
  modal:    true,
  buttons:  { 
    "<%= I18n.t('application.general.upload') %>": function() { $('#upload_picture_form').submit(); },
    "<%= I18n.t('application.general.cancel') %>": function() { $(this).dialog('close'); }
     },
  close:    function(event, ui) { $(this).dialog('destroy'); },
  width:    650,
  title:    "<%= I18n.t('users.profile.upload_picture.heading') %>"
});


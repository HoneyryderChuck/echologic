<% content_for :tabContainer do %>
  <%= render :partial => 'users/users/tabs' %>
<% end %>

<h1>Profile</h1>

Message: <%= flash[:notice] %>

<p>
  <b>Image:</b>
  <%= image_tag @user.picture.url(:small) %>
</p>

<p>
  <b>Login:</b>
  <%=h @user.login %>
</p>

<p>
  <b>UPDATED:</b>
  <%=h @user.updated_at %>
</p>


<p>
  <b>Login count:</b>
  <%=h @user.login_count %>
</p>

<p>
  <b>Last request at:</b>
  <%=h @user.last_request_at %>
</p>

<p>
  <b>Last login at:</b>
  <%=h @user.last_login_at %>
</p>

<p>
  <b>Current login at:</b>
  <%=h @user.current_login_at %>
</p>

<p>
  <b>Last login ip:</b>
  <%=h @user.last_login_ip %>
</p>

<p>
  <b>Current login ip:</b>
  <%=h @user.current_login_ip %>
</p>

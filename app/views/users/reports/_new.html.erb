<%= I18n.t('users.reports.new.text') %>

<% semantic_form_for @report, :html => { :id => 'new_report_form' } do |form| %>

  <% form.inputs do %>
    <%= form.input :reason, :as => :text, :input_html => { :rows => 4 } %>
    <%= form.input :suspect_id, :as => :hidden %>
  <% end %>

  <% form.buttons do %>
    <%= form.commit_button I18n.t('application.general.create'), :button_html => { :alt => 'report_button' } %>
  <% end %>

<% end %>

<script type="text/javascript">
  $j('textarea').autogrow();
  $j("#new_report_form").ajaxForm({ dataType: 'script' });
</script>

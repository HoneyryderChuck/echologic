/**
 * Template to view the sign in modal dialog.
 */

/* Write render output into JS variables for later use. */
var content = "<%= escape_javascript(render(:partial => 'users/password_resets/edit')) %>";

$('#dialogContent').html(content);

$('#dialogContent').dialog({
  bgiframe: true,
  modal:    true,
  close:    function(event, ui) { $(this).dialog('destroy'); },
  width:    900,
  height:   700,
  resizable: false,
  dialogClass: 'basic_profile_box'
});

$('#dialogContent').find('.close_button').bind('click', function (){
  $('#dialogContent').dialog('destroy');
});

$('.basic_profile_box').find(".ui-dialog-titlebar").hide();
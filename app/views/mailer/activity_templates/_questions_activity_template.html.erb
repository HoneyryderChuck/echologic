
<%= I18n.t('mail.question.text1') %>

<%= I18n.t('mail.question.new_questions', :count => questions.count) %>


<% tags = Hash.new %>
<% questions.each do |question|%>
  <% question_data = JSON.parse(question.event) %>
	<% question_data['question']['tao_tags'].each do |tao_tag| %>
	 <% tags[tao_tag['tag']['value']] = tags[tao_tag['tag']['value']] + 1 || 0 %>
	<% end %>
<% end %>


<%= I18n.t('mail.question.tags_intro') %>

<% tags.each do |k,v| %>
  <%= I18n.t('mail.question.tag', :tag => k, :count => v) %>
<% end %>

<% content_for :title do %>
  <%= I18n.t('mailers.activity_tracking.subject', :locale => @language.code) %>
<% end %>


<%= render :partial => "activity_tracking_mailer/activity_templates/root_statements_activity_template" %>

<% @events.keys.sort.each do |level| %>
  <% @events[level].each do |parent_id, events| %>
	  <%= render :partial => "activity_tracking_mailer/children_template", 
	             :locals => {:parent_id => parent_id, :events => events} %>
	<% end %>
<% end %>



<% content_for :unsubscribe do %>
  <%= I18n.t('mailers.activity_tracking.unsubscribe', :echo_url => root_url, :locale => @language.code) %>
<% end %>

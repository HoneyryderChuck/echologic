<h1>Editing locale</h1>

<% form_tag @locale, :method => :put do %>
  <p>
    <%= label_tag :code %><br />
    <%= text_field_tag :code, @locale.code %>
  </p>
  <p>
    <%= label_tag :name %><br />
    <%= text_field_tag :name, @locale.name %>
  </p>
  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @locale %> |
<%= link_to 'Back', locales_path %>
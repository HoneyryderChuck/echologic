<h1>New locale</h1>

<% form_tag locales_path do %>
  <p>
    <%= label_tag :code %><br />
    <%= text_field_tag :code %>
  </p>
  <p>
    <%= label_tag :name %><br />
    <%= text_field_tag :name %>
  </p>
  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Back', locales_path %>